    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>

 	<!-- AngularJS
    ================================================== -->
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js"></script>
	<script>
		var myApp = angular.module('myApp',[]);

		var name, pic, desc;

		myApp.controller('myController', ['$scope','$http', function($scope,$http) {
			$http.get('/timeline').success(function(data){
				$scope.timeline = data;
    			console.log($scope.timeline);

				name = $scope.timeline.name;
				console.log(name);
				document.getElementById("header").innerHTML = name; 

				pic = $scope.timeline.profile_image_url.replace('_normal','');
				console.log(pic);
				document.getElementById("img").src = pic; 

				desc = $scope.timeline.description;
				console.log(desc);
				document.getElementById("bio").innerHTML = desc; 
			});
		}]);

		
		myApp.controller('myTweetController', ['$scope','$http', function($scope,$http) {
	 		$scope.greeting = 'Hola!';
			
			$http.get('/tweets').success(function(data-tweets){
				$scope.tweets = data-tweets;
    			console.log($scope.tweets);
			});
		}]);
		
	</script>
