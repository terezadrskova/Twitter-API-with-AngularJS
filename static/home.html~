    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

 	<!-- AngularJS
    ================================================== -->
	<script src="lib/angular/angular.js"></script>
	<script src="js/app.js"></script>
	<script src="js/services.js"></script>
	<script src="js/controllers.js"></script>
	<script src="js/filters.js"></script>
	<script src="js/directives.js"></script>
	<script>
		var name, pic, desc;

		var myApp = angular.module('myApp',[]);

		
		myApp.controller('myTimelineController', ['$scope','$http', function($scope,$http) {
			$http.get('/timeline').success(function(data){
				$scope.timeline = data;
    			console.log($scope.timeline);

				name = $scope.timeline.name;
				console.log(name);
				document.getElementById("header").innerHTML = name; 

				pic = $scope.timeline.profile_image_url.replace('_normal','');
				console.log(pic);
				document.getElementById("img").src = pic; 

				desc = $scope.timeline.description;
				console.log(desc);
				document.getElementById("bio").innerHTML = desc; 

				bg = $scope.timeline.profile_background_image_url;
				console.log(bg);
				document.getElementById("background").style.backgroundImage = 'url(' + bg + ')'; 
				
			});
		}]);
		
		
		myApp.controller('myTweetController', ['$scope','$http', function($scope,$http) {
			
			$http.get('/tweets').success(function(data){
				$scope.tweets = data["tweet_array"];
				for(var i=0; i<10;  i++){
					$scope.tweets[i] = $scope.tweets[i];
				}
				var tweet1 = $scope.tweets[1]
				document.getElementById("tweet").innerHTML = tweet1; 

			});

			$scope.limit = 10;
			
		}]);
		

	</script>
  </body>
