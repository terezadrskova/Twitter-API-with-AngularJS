	<div id="background"></div>

    <div class="container-fluid">
      	<div class="starter-template">
		
			<div class="row">

	  			<div class="col-xs-4">		<!-- start of left column -->
					<div ng-controller="myTimelineController">
						<img src="" class="img-thumbnail" id="img" alt="" />
		    			<h1 id="header"></h1>
						<div class="well">
		    				<p id="bio"></p>
						</div>
						
						
					</div>	<!-- // .myTimelineController -->
				</div>	<!-- // .col-md-4-->

	  			<div class="col-xs-8 tweetcol">		<!-- start of right column -->
					<div ng-controller="myTweetController">
						<h2 class="tweet-header"><span class="label label-primary">Latest tweets</span> <span class="badge">{{ limit }}</span></h2>
						
						<h4 class="filter-header">Filter tweets</h4> <input type="text" ng-model="keyword" />

						<h4 class="filter-header two">Number of tweets</h4> <input type="text" ng-model="limit" />
						<ul id="twitter-listing">
							<li ng-repeat="tweet in tweets  | limitTo:limit | filter:keyword">{{ tweet }}</li>
						</ul>
						<!-- <p id="tweet">tweet1</p> -->
					</div>	<!-- // .myTweetController -->
				</div>	<!-- // .col-md-8-->

