    <div class="container">

      <div class="starter-template">
		<div ng-controller="myController">
        	<h1 id="header"></h1>
			<img src="" class="img-thumbnail" id="img" alt="" />
			<div class="jumbotron">
        		<p id="bio"></p>
			</div>
		</div>

		<div ng-controller="myTweetController">
			<p>Latest tweets <span class="badge">10</span></p>
